<resources>

<!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextView_title" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:background">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>

    </style>
    <style name="bottom_buttonBar" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:background">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="bottom_button" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:maxWidth">36dp</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>
</resources>
