
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >

    <TextView
        android:id="@+id/tvAppTitle"
        style="@style/TextView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/groupList_title"
        android:gravity="top"

        />
    <ViewStub android:id="@+id/vsApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppTitle"
        android:layout_above="@id/llBottom"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:layout="@layout/fragment_welcome"
        />


    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:background="@color/colorTitle"
        android:orientation="horizontal">










        <ImageButton
            android:id="@+id/bAppFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:contentDescription="@string/bFirst.hint"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            app:srcCompat="@drawable/ic_first_page_black_24dp" />

        <ImageButton
            android:id="@+id/bAppPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/bAppFirst"
            android:background="@null"
            android:contentDescription="@string/bPrevious.hine"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp" />


        <ImageButton
            android:id="@+id/bAppSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/bAppEdit"
            android:background="@null"
            android:contentDescription="@string/bSave.hint"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            android:src="@drawable/ic_save_black_24dp" />

        <ImageButton
            android:id="@+id/bAppEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bEdit.hint"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:background="@null"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/bAppAdd"
            />

        <ImageButton
            android:id="@+id/bAppAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/bAppBack"
            android:background="@null"
            android:contentDescription="@string/Pass.add"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

        <ImageButton
            android:id="@+id/bAppBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:contentDescription="@string/bBackPage.hine"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            app:srcCompat="@drawable/ic_undo_black_24dp" />


        <ImageButton
            android:id="@+id/bAppSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/bAppBack"
            android:background="@null"
            android:contentDescription="@string/menu.Search"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            app:srcCompat="@drawable/ic_search_black_24dp" />

        <ImageButton
            android:id="@+id/bAppCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/bAppSearch"
            android:background="@null"
            android:contentDescription="@string/bCancel"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            android:src="@drawable/ic_close_black_24dp" />

        <ImageButton
            android:id="@+id/bAppDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/bAppCancel"
            android:background="@null"
            android:contentDescription="@string/bdelete.hint"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            android:src="@drawable/ic_delete_black_24dp" />

        <ImageButton
            android:id="@+id/bAppNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/bAppLast"
            android:background="@null"
            android:contentDescription="@string/bNext.hint"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

        <ImageButton
            android:id="@+id/bAppLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:contentDescription="@string/bLast.hint"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:minWidth="24dp"
            android:minHeight="24dp"
            app:srcCompat="@drawable/ic_last_page_black_24dp" />



    </LinearLayout>

</RelativeLayout>