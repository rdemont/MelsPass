<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.rmbi.melspass">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" android:requiredFeature="false"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_logo_mels_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_mels_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".view.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:configChanges="orientation|screenSize" -->
        <activity android:name=".view.MainActivity">

        </activity>

    </application>

</manifest>